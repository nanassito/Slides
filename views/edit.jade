extends layout

block append variables
	- var title = title
	- var headerType = "edit"
	- var footerType = "edit"

block append head
	script(src="/static/js/editView.js")


block body
	section(id="body", data-view="edit")
		include header
		article
			iframe(src="#{url}")
		section#outline
			aside
				- var index = 0;
				each slide in slides
					- index = index + 1
					case index
						when 1
							section.wrapper(aria-selected='true')
								section
									h1 #{index}
									iframe(src="#{slide.url}")
						default
							section.wrapper
								section
									h1 #{index}
									iframe(src="#{slide.url}")
		include footer